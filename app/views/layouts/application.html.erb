<!DOCTYPE html>
<html>
<head>
  <title>BigBug</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
  <base href="<%=root_url%>">
</head>
<body>
		

		<div id="site-content">
			<header class="site-header">
				<div class="container">
					<a href="" id="branding">
						<img src="logo.png" alt="" class="logo">
						<div class="logo-copy">
							<h1 class="site-title">My   Film</h1>
							<small class="site-description">Enjoy your Life</small>
						</div>
					</a> <!-- #branding -->
					<div class="main-navigation">
						<button type="button" class="menu-toggle"><i class="fa fa-bars"></i></button>
						<ul class="menu">
							<li class="menu-item current-menu-item"><a href="">Home</a></li>
							<li class="menu-item"><%=link_to t("application.reviews"),reviews_url%></li>
							<% if !current_user %>
							<li class="menu-item"><%=link_to t("application.sign_up"),new_user_registration_path%></li>
							<li class="menu-item"><%=link_to t("application.login"),new_user_session_path%></li>
							<li class="menu-item"><a href="contact.html">Contact</a></li>
							<% else %>
							<li class="menu-item"><%=link_to t("application.new_review"),new_review_path%></li>
							<li class="menu-item"><%=link_to t("application.profile"),profile_path%></li>
							<li class="menu-item"><%=link_to t("application.logout"),destroy_user_session_url, method: :delete%></li>
							<% end %>
						</ul> <!-- .menu -->
						<form action="#" class="search-form">
							<input type="text" placeholder="Search...">
							<button><i class="fa fa-search"></i></button>
						</form>
					</div> <!-- .main-navigation -->

					<div class="mobile-navigation"></div>
				</div>
			</header>
			<main class="main-content">
				<div class="container">
					<% flash.each do |name, msg| %>
  					<% if msg.is_a?(String) %>
    					<div class="alert alert-<%= name.to_s == 'notice' ? 'success' : 'danger' %>">
      					<button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
      					<%= content_tag :div, msg, :id => "flash_#{name}" %>
    					</div>
  					<% end %>
					<% end %>
					<%= yield %>
				</div>
			</main>
			<footer class="site-footer">


					<div class="colophon">Copyright 2016 RocketTeam, Designed by BigBugTeam. All rights reserved</div>
				</div> <!-- .container -->

			</footer>
		</div>
  </body>
</html>
